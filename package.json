{
  "type": "module",
  "dependencies": {
    "dotenv": "^8.2.0",
    "eslint": "^7.19.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.7",
    "browser-sync": "^2.26.14",
    "concurrently": "^5.3.0",
    "node-sass": "^5.0.0",
    "stylelint": "^13.9.0"
  },
  "scripts": {
    "start": "node ./src/app.js",
    "test": "concurrently \"npm:eslint\" \"npm:stylelint\"",
    "eslint": "eslint *.js",
    "stylelint": "stylelint **/*.scss",
    "browser-sync": "browser-sync start --server",
    "dev": "concurrently \"nodemon ./src/app.js\" \"npm:sass-watch\"",
    "sass": "node-sass ./public/styles.scss ./public/styles.css",
    "sass-watch": "node-sass --source-map-embed --watch ./public/styles/scss/styles.scss --recursive ./public/styles/css/styles.css"
  }
}
